<suite name="main" company="aet" domain="http://192.168.123.100:9090/sample-site/sanity/" project="aet">

	<!-- JS ERRORS-Comparator START -->
	<test name="S-comparator-JsErrors">
		<collect>
			<open />
			<sleep duration="1000" />
			<js-errors />
		</collect>
		<compare>
			<js-errors />
		</compare>
		<urls>
			<url href="comparators/jserrors/success.jsp" />
		</urls>
	</test>

    <!-- Chrome shows this error in console (FF didn't) that's why this error is being filtered. TODO: Remove this test or mark it as Failed and correct bobcat assertions -->
	<test name="S-comparator-JsErrors-NONEXISTINGPAGE-404">
		<collect>
			<open />
			<sleep duration="1000" />
			<js-errors />
		</collect>
		<compare>
			<js-errors>
				<js-errors-filter error="Failed to load resource: the server responded with a status of 404 (Not Found)" />
			</js-errors>
		</compare>
		<urls>
			<url href="comparators/jserrors/nonExistingPage.jsp" />
		</urls>
	</test>

	<test name="F-comparator-JsErrors">
		<collect>
			<open />
			<sleep duration="1000" />
			<js-errors />
		</collect>
		<compare>
			<js-errors />
		</compare>
		<urls>
			<url href="comparators/jserrors/failed.jsp" />
		</urls>
	</test>

	<test name="S-comparator-JsErrors-mix-of-filters">
		<collect>
			<open />
			<sleep duration="1000" />
			<js-errors />
		</collect>
		<compare>
			<js-errors>
				<js-errors-filter errorPattern="[\w ]+: nonExistingJsFunction is \d*(not |un)defined" />
				<js-errors-filter line="371" />
			</js-errors>
		</compare>
		<urls>
			<url href="comparators/jserrors/failed.jsp" />
		</urls>
	</test>
	<!-- JS ERRORS-Comparator END -->
</suite>
