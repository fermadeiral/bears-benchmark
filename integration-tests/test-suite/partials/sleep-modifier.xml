<suite name="main" company="aet" domain="http://192.168.123.100:9090/sample-site/sanity/" project="aet">

	<!-- Sleep-Modifier BEGIN -->
	<test name="S-modifier-Sleep">
		<collect>
			<open />
			<resolution width="1500" height="2800" />
			<sleep duration="10000" />
			<screen />
		</collect>
		<compare>
			<screen comparator="layout" />
		</compare>
		<urls>
			<url href="modifiers/sleep/success.jsp" />
		</urls>
	</test>
	<!-- Should fail because sleep is shorter than the time before the timestamp panel disappears -->
	<test name="F-modifier-Sleep">
		<collect>
			<open />
			<resolution width="1500" height="2800" />
			<sleep duration="100" />
			<screen />
		</collect>
		<compare>
			<screen comparator="layout" />
		</compare>
		<urls>
			<url href="modifiers/sleep/failed.jsp" />
		</urls>
	</test>
	<!-- Sleep-Modifier END -->
</suite>
