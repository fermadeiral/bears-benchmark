                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino.apt</groupId>
                <artifactId>apt-server</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino.api</groupId>
                <artifactId>domino-api-client</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino.api</groupId>
                <artifactId>domino-api-client</artifactId>
                <classifier>sources</classifier>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino.api</groupId>
                <artifactId>domino-api-server</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino.api</groupId>
                <artifactId>domino-api-shared</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino.api</groupId>
                <artifactId>domino-api-shared</artifactId>
                <classifier>sources</classifier>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino</groupId>
                <artifactId>domino-client-commons</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino.logging</groupId>
                <artifactId>domino-gwt-logger</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino.logging</groupId>
                <artifactId>domino-log4j-server-logging</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino</groupId>
                <artifactId>domino-remote-logging</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino.test</groupId>
                <artifactId>domino-client-test</artifactId>
                <version>${project.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino</groupId>
                <artifactId>jks-server-cofigurator</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.dominokit.domino</groupId>
                <artifactId>domino-service-discovery</artifactId>
                <version>${project.version}</version>
