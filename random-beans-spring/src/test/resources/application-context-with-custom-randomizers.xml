<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="enhancedRandom" class="io.github.benas.randombeans.spring.EnhancedRandomFactoryBean">
        <property name="randomizers">
            <list value-type="java.util.ArrayList">
                <ref bean="nameRandomizer"/>
                <ref bean="barRandomizer"/>
            </list>
        </property>
        <property name="mappings">
            <map key-type="java.lang.Class">
                <entry>
                    <key><value>java.lang.Integer</value></key>
                    <bean class="io.github.benas.randombeans.spring.DummyIntegerRandomizer">
                        <constructor-arg value="10"/>
                    </bean>
                </entry>
            </map>
        </property>
        <property name="maxStringLength" value="3"/>
    </bean>

    <bean id="nameRandomizer" class="io.github.benas.randombeans.spring.RandomizerBean">
        <property name="type" value="io.github.benas.randombeans.spring.Foo"/>
        <property name="fieldType" value="java.lang.String"/>
        <property name="fieldName" value="name"/>
        <property name="randomizer">
            <bean class="io.github.benas.randombeans.spring.NameRandomizer"/>
        </property>
    </bean>

    <bean id="barRandomizer" class="io.github.benas.randombeans.spring.RandomizerBean">
        <property name="fieldType" value="java.lang.String"/>
        <property name="annotation">
            <bean class="java.lang.Class" factory-method="forName">
                <constructor-arg value="java.lang.Deprecated"/>
            </bean>
        </property>
        <property name="randomizer">
            <bean class="io.github.benas.randombeans.spring.NameRandomizer"/>
        </property>
    </bean>

</beans>
